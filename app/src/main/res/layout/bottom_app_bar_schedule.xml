<?xml version="1.0" encoding="utf-8"?>
    <com.google.android.material.bottomappbar.BottomAppBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
    xmlns:app="http://schemas.android.com/apk/res-auto" 
    android:layout_gravity="bottom"
    android:id="@+id/bottomAppBar"
    android:theme="@style/Widget.MaterialComponents.BottomAppBar"
    android:layout_alignParentBottom="true"
        tools:showIn="@layout/fragment_schedule"
    android:layout_width="match_parent"
        app:backgroundTint="@color/scheduleBackgroundColor"
    app:navigationIcon="@drawable/ic_menu_24px"
    android:layout_height="wrap_content">
    <LinearLayout
            android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
            android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/button_advanced_search"
                    android:paddingVertical="12dp"
                android:layout_weight="1"
            android:background="?android:selectableItemBackground"
                android:src="@drawable/search_24px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <ImageButton
        android:layout_weight="1"
                    android:id="@+id/button_schedule_filter"
            android:background="?android:selectableItemBackground"
                android:src="@drawable/ic_filter_24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageButton
                    android:id="@+id/button_home"
                    android:paddingVertical="12dp"
                android:layout_weight="1"
            android:background="?android:selectableItemBackground"
                android:src="@drawable/schedule_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
                </LinearLayout>
</com.google.android.material.bottomappbar.BottomAppBar>
