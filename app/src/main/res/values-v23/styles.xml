<resources>

  <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorOnPrimary">@color/textColorPrimary</item>
    <item name="colorOnSurface">@color/textColorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorSecondary">@color/colorSecondary</item>
    <item name="colorAccent">@color/colorSecondary</item>
    <item name="android:colorEdgeEffect">@color/colorSecondary</item>
    <item name="preferenceTheme">@style/AppTheme.PreferenceThemeOverlay</item>
    <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
    <item name="android:navigationBarColor">#0C0C0C</item>

    <item name="android:statusBarColor">@color/layerZero</item>
    <item name="android:windowLightStatusBar">true</item>
    <item name="android:datePickerDialogTheme">@style/Dialog.Theme</item>
    <item name="android:timePickerDialogTheme">@style/Dialog.Theme</item>
  </style>
  <style name="AppTheme.ActionBar">
    <item name="background">@color/colorPrimaryLight</item>
  </style>

  <style name="AppTheme.NavigationMenu">
    <item name="colorPrimary">@color/colorSecondary</item>
  </style>

  <style name="AppTheme.PreferenceThemeOverlay" parent="@style/PreferenceThemeOverlay">
    <item name="android:layout">@layout/fragment_settings</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <!--<item name="android:statusBarColor">@android:color/transparent</item>-->
  </style>

  <style name="AppTheme.Splash">
    <item name="android:windowBackground">@drawable/splash_screen</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">false</item>
    <item name="android:windowTranslucentStatus">true</item>
    <item name="android:windowTranslucentNavigation">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowActionBar">true</item>
    <item name="android:windowLightStatusBar">false</item>
  </style>

  <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
    <item name="android:layout_width">95dp</item>
    <item name="android:theme">@style/Theme.MaterialComponents.DayNight</item>
    <item name="android:textAlignment">center</item>
  </style>

  <style name="BottomSheet" parent="@style/Theme.MaterialComponents.BottomSheetDialog">
    <item name="android:background">@drawable/shape_bottom_sheet</item>
  </style>

  <style name="BaseBottomSheetDialog" parent="@style/Theme.MaterialComponents.BottomSheetDialog">
    <item name="android:windowIsFloating">false</item>
    <item name="bottomSheetStyle">@style/BottomSheet</item>
  </style>

  <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" >
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
  </style>

  <style name="Dialog.Theme" parent="ThemeOverlay.MaterialComponents.Dialog">
    <item name="colorPrimary">@color/textColorPrimary</item>
  </style>

  <style name="ScheduleToolbarText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
    <item name="android:textSize">30sp</item>
    <item name="android:fontFamily">@font/open_sans</item>
  </style>

  <style name="ScheduleToolbarSubtitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
    <item name="android:textSize">13sp</item>
    <item name="android:fontFamily">@font/open_sans_semibold</item>
  </style>

  <style name="TabLayoutAddresses" parent="Widget.Design.TabLayout">
    <item name="tabIndicatorHeight">32dp</item>
    <item name="tabIndicatorGravity">center</item>
    <item name="tabBackground">@null</item>
    <item name="tabRippleColor">#00000000</item>
    <item name="tabIndicatorColor">@color/colorLevelThree</item>
    <item name="tabIndicator">@drawable/background_tab_indicator_schedule_type</item>
    <item name="tabPaddingStart">15dp</item>
    <item name="tabPaddingEnd">15dp</item>
    <item name="tabTextAppearance">@style/TabLayoutAddressesTextAppearance</item>
  </style>

  <style name="TabLayoutAddressesTextAppearance" parent="TextAppearance.AppCompat">
    <item name="android:textSize">13dp</item>
    <item name="fontFamily">@font/open_sans_bold</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">@color/addresses_tab_selector</item>
  </style>

  <style name="TabLayoutSchedule" parent="Widget.Design.TabLayout">
    <item name="tabIndicatorHeight">50dp</item>
    <item name="tabIndicatorGravity">center</item>
    <item name="tabBackground">@null</item>
    <item name="tabRippleColor">#00000000</item>
    <item name="tabIndicatorColor">@color/colorLevelThree</item>
    <item name="tabIndicator">@drawable/background_tab_indicator_addresses</item>
    <item name="tabPaddingStart">0dp</item>
    <item name="tabPaddingEnd">0dp</item>
    <item name="tabTextAppearance">@style/TabLayoutScheduleTextAppearance</item>
  </style>

  <style name="TabLayoutScheduleTextAppearance" parent="TextAppearance.AppCompat">
    <item name="android:textSize">10dp</item>
    <item name="fontFamily">@font/open_sans_semibold</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">@color/addresses_tab_selector</item>
  </style>

  <style name="TabLayoutScheduleType" parent="Widget.Design.TabLayout">
    <item name="tabIndicatorHeight">32dp</item>
    <item name="tabIndicatorGravity">center</item>
    <item name="tabBackground">@null</item>
    <item name="tabRippleColor">#00000000</item>
    <item name="tabIndicatorColor">@color/colorLevelThree</item>
    <item name="tabIndicator">@drawable/background_tab_indicator_schedule_type</item>
    <item name="tabPaddingStart">15dp</item>
    <item name="tabPaddingEnd">15dp</item>
    <item name="tabTextAppearance">@style/TabLayoutScheduleTypeTextAppearance</item>
  </style>

  <style name="TabLayoutScheduleTypeTextAppearance" parent="TextAppearance.AppCompat">
    <item name="android:textSize">15dp</item>
    <item name="fontFamily">@font/open_sans_semibold</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">@color/addresses_tab_selector</item>
  </style>

  <style name="ScheduleLessonTitle" parent="TextAppearance.AppCompat">
    <item name="android:textSize">21sp</item>
    <item name="android:fontFamily">@font/open_sans</item>
    <item name="android:textColor">@color/accent_text_color</item>
    <item name="android:breakStrategy">simple</item>
  </style>

  <style name="ScheduleLessonSubtitle" parent="TextAppearance.AppCompat">
    <item name="android:textSize">14.8sp</item>
    <item name="android:fontFamily">@font/open_sans</item>
    <item name="android:textColor">@color/secondary_text_color</item>
    <item name="android:drawableTint">@color/secondary_text_color</item>
  </style>

  <style name="ScheduleLessonTime" parent="TextAppearance.AppCompat">
    <item name="android:textSize">18sp</item>
    <item name="android:fontFamily">@font/open_sans</item>
    <item name="android:textColor">@color/lessonTimeText</item>
    <item name="android:textAlignment">textStart</item>
  </style>

  <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
    <item name="iconPadding">0dp</item>
    <item name="strokeWidth">0dp</item>
    <item name="colorPrimary">@color/colorSecondary</item>
    <item name="android:insetTop">0dp</item>
    <item name="android:insetBottom">0dp</item>
    <item name="android:paddingLeft">12dp</item>
    <item name="android:paddingRight">12dp</item>
    <item name="android:minWidth">48dp</item>
    <item name="android:minHeight">48dp</item>
  </style>

  <style name="ButtonGroup">
    <item name="colorPrimary">@color/colorSecondary</item>
  </style>

</resources>